{
    "extends": "airbnb-base",
    "env": {
        "mocha": true
      },
      "rules": {
        "func-names": "off",
        "prefer-arrow-callback": "off",
        "require-jsdoc": "off",
        "no-unused-expressions": "off",
        "semi": "error",
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "class-methods-use-this": "off"
      }
}
